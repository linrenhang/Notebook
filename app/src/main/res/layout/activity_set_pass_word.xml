<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.notebook.SetPassWordActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/set_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <EditText
        android:id="@+id/set_password_new"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:hint="请输入四位数字作为密码"
        android:inputType="numberPassword"
        android:textSize="15sp"
        android:background="@drawable/button_gray_radius"
        android:textCursorDrawable="@drawable/edit_cursor"
        android:maxLength="4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/set_h"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.07" />
    <EditText
        android:id="@+id/set_password_repeat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:inputType="numberPassword"
        android:hint="确认新的密码"
        android:textSize="15sp"
        android:background="@drawable/button_gray_radius"
        android:textCursorDrawable="@drawable/edit_cursor"
        android:maxLength="4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/set_password_new"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.07"
        />
    <EditText
        android:id="@+id/set_password_tips"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:hint="输入提示(可选)"
        android:textSize="15sp"
        android:textCursorDrawable="@drawable/edit_cursor"
        android:background="@drawable/button_gray_radius"
        android:maxLength="20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/set_password_repeat"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.07"
        />
    <Button
        android:id="@+id/set_password_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="保存密码"
        android:background="@drawable/button_click_deepblue"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/set_password_tips"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.07"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
