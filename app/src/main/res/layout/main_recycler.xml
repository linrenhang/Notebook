<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="1dp"
        app:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp">
            <EditText
                android:id="@+id/main_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:longClickable="false"
                android:layout_gravity="center"
                android:background="@drawable/null_background"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="9sp"
                android:textColor="#B3000000"
                android:minLines="2"
                android:maxLines="2" />
            <ImageView
                android:id="@+id/main_extend"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/button_click_blue"
                android:src="@drawable/down_crow"/>
            <ImageView
                android:id="@+id/main_enter"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/button_click_blue"
                android:src="@drawable/crow_black"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="3dp"
        app:cardCornerRadius="4dp">
        <EditText
            android:id="@+id/main_extend_text"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:paddingTop="5dp"
            android:lineSpacingMultiplier="1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#B3000000"
            android:background="@drawable/null_background"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:textSize="9sp"
            android:minLines="2"
            android:visibility="gone"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>
